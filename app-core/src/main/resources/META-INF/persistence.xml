<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
    http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">
	
	<persistence-unit name="ehfgAppPersistenceUnit">
		<class>org.ehfg.app.core.entities.AppConfig</class>
		<class>org.ehfg.app.core.entities.ConferenceDay</class>
		<class>org.ehfg.app.core.entities.Location</class>
		<class>org.ehfg.app.core.entities.PointOfInterest</class>
		<class>org.ehfg.app.core.entities.Tweet</class>
		<class>org.ehfg.app.core.entities.TwitterUser</class>
		
		<exclude-unlisted-classes />
	</persistence-unit>
</persistence>