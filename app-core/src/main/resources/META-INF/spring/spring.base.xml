<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

	<bean id="twitterFacade" class="org.ehfg.app.core.facade.TwitterFacadeImpl">
		<constructor-arg ref="tweetRepository" />
		<constructor-arg ref="twitterStreamingFacade" />
		<constructor-arg ref="appConfigRepository"/>
	</bean>

	<bean id="masterDataFacade" class="org.ehfg.app.core.facade.MasterDataFacadeImpl">
		<constructor-arg ref="appConfigRepository" />
	</bean>
</beans>