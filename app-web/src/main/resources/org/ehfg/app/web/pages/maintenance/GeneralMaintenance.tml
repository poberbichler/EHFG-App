<div t:id="layout" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd" xmlns:p="tapestry:parameter">
	<h1>maintenance</h1>

	<form t:id="inputForm" class="form-horizontal">
		<t:errors />
	
		<div class="form-group">
			<label for="hashtag" class="col-sm-2 control-label">hashtag</label>
			<div class="col-sm-4">
				<input t:id="hashtag" class="form-control" />
			</div>
		</div>
		
		<div class="form-group">
			<label for="numberOfTweets" class="col-sm-2 control-label">number of tweets shown</label>
			<div class="col-sm-4">
				<input t:id="numberOfTweets" class="form-control" />
			</div>
		</div>
		
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<button t:id="submitInputForm" class="btn btn-primary" value="save changes"></button>
			</div>
		</div>
	</form>
</div>